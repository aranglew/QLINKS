@*//Placeholder for the Links Details information that will be populated on a Javascript function*@
@*This is the partial view use from Menu Items to manage the links on Data table.*@
<div class="modal fade" tabindex="-1" role="dialog" id="LinkOptionsModal" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">My Title</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6 col-sm-6 col-xl-6 col-xs-6">
                        <div class="panel-body">
                            <fieldset id="modalfunctionsLinkC1" disabled>
                                <input type="hidden" name="tid" id="tid" />
                                <div class="form-group">
                                    @*@Html.Label("Topic Id", new { @class = "control-label" })*@
                                    @Html.DisplayName("Topic Id")
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-text-size"></i></span>
                                        @Html.TextBox("topicid", null, new { id = "topicid", @class = "form-control" })
                                    </div>
                                </div>


                                <div class="form-group">
                                    @*@Html.Label("Order", new { @class = "control-label" })*@
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-sort-by-order"></i></span>
                                        @Html.TextBox("sortorder", null, new { id = "sortorder", @class = "form-control", placeholder="Order" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @*@Html.Label("Format", new { @class = "control-label" })*@
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-eye-open"></i></span>
                                        <textarea rows="4" cols="50" id="format" name="format" class="form-control"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @*@Html.Label("Detail", new { @class = "control-label" })*@
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-menu-hamburger"></i></span>
                                        <textarea rows="4" cols="50" id="detail" name="detail" class="form-control"></textarea>
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xl-6 col-xs-6">
                        <div class="panel-body">
                            <fieldset id="modalfunctionsLinkC2" disabled>
                                <div class="form-group">

                                    <div class="form-group">
                                        @*@Html.Label("Type", new { @class = "control-label" })*@
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-text-width "></i></span>
                                            <select id="type" class="form-control"> </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @*@Html.Label("Description", new { @class = "control-label" })*@
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-list-alt"></i></span>
                                            @Html.TextBox("description", null, new { id = "description", @class = "form-control" })
                                        </div>
                                    </div>


                                    @*@Html.Label("Data", new { @class = "control-label" })*@
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-menu-hamburger"></i></span>
                                        <textarea rows="4" cols="50" id="data" name="data" class="form-control"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @*@Html.Label("Location", new { @class = "control-label" })*@
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                                        <textarea rows="4" cols="50" id="location" name="location" class="form-control"></textarea>
                                    </div>
                                </div>

                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveLinkbutton" onClick="SaveLinkChanges()">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->       